  keywords         = {aeronet, aerosol properties, misr, modis, polder, surface reflectance},
  modificationdate = {2022-10-21T11:38:51},
  tags             = {AERONET,Aerosol properties,MISR,MODIS,POLDER,Surface reflectance},
  timestamp        = {2022-10-16},
}

@Article{Siomos2020,
  author           = {Nikolaos Siomos and Ilias Fountoulakis and Athanasios Natsis and Theano Drosoglou and Alkiviadis Bais},
  date             = {2020-03},
  journaltitle     = {Remote Sensing},
  title            = {Automated Aerosol Classification from Spectral {UV} Measurements Using Machine Learning Clustering},
