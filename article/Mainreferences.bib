@Article{Tapakis2014,
  author           = {Tapakis, R. and Charalambides, A. G.},
  date             = {2014-02},
  journaltitle     = {Renewable Energy},
  title            = {Enhanced values of global irradiance due to the presence of clouds in Eastern Mediterranean},
