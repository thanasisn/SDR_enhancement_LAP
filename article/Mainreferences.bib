@Article{Inman2016,
  author           = {Rich H. Inman and Yinghao Chu and Carlos F. M. Coimbra},
  date             = {2016},
  journaltitle     = {Solar Energy},
  title            = {Cloud enhancement of global horizontal irradiance in California and Hawaii},
